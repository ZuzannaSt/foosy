<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <h1>Matches</h1>
      <table class="table table-hover">
        <% @matches.each do |match| %>
        <tr>
          <td>
            <%= link_to match.date.to_formatted_s(:long), match, id: 'match_date' %>
          </td>
          <% match.players.each do |player| %>
          <td>
            <%= link_to player.full_name, player %>  
            <span class="badge">
              <%= player.score(match) %>
            </span>
          </td>
          <%end%>
        </tr>
        <% end %>
      </table>
      <div><%= will_paginate @matches, renderer: BootstrapPagination::Rails %></div>
    </div>
  </div>
</div>
