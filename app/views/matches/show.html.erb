<div class="container text-center">
  <div class="col-md-4 col-md-offset-4">
    <div id="match-result">
      <%= render "matches/match_result" %>
    </div>
    <div class="unobtrusive-flash-container"></div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= @first_player.small_avatar %>
      <h3><%= @first_player.full_name %></h3>
      <h1>
        <span id="first-player-score">
          <%= @first_player.score(@match) %>
          </span>
        </h1>
      <div id="first-result">
        <%= render "matches/first_result" %>
      </div>
    </div>
    <div class="col-md-6">
        <%= @second_player.small_avatar %>
        <h3><%= @second_player.full_name %></h3>
        <h1>
          <span id="second-player-score">
            <%= @second_player.score(@match) %>
          </span>
        </h1>
        <div id="second-result">
          <%= render "matches/second_result" %>
        </div>
    </div>
</div>
