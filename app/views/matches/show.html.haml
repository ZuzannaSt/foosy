.container.text-center
  .col-md-4.col-md-offset-4
    #match-result
      = render "matches/match_result"
    .unobtrusive-flash-container

  .row
    .col-md-6
      = @first_player.small_avatar
      %h3= @first_player.link_to_full_name
      %h1
        %span#first-player-score
          = @first_player.score(@match)
      #first-result
        = render "matches/first_result"

    .col-md-6
      = @second_player.small_avatar
      %h3= @second_player.link_to_full_name
      %h1
        %span#second-player-score
          = @second_player.score(@match)
      #second-result
        = render "matches/second_result"
