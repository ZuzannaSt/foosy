<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1> Create match </h1><br>

      <div class="form-horizontal">
        <%= form_for @match do |f| %>
        <%= render 'layouts/error_messages', object: @match %>

        <div class="form-group">
          <label> Choose two players </label><br>
          <%= f.collection_check_boxes :player_ids, Player.all, :id, :full_name, class: 
          "checkbox" %>
        </div>

        <div class="form-group">
          <label> Pick a starting date </label><br>
          <%= f.datetime_select :date, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
