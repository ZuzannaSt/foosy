.container
  .row
    .col-md-4.col-md-offset-1
      %h1 Our top players
      %br/
      - @top_players.each do |player|
        .row
          .col-md-4
            = player.small_avatar
          .col-md-6
            %br/
            = player.link_to_full_name
    .col-md-5
      %h1 Recent games
      %br/
      - @recent_games.each do |match|
        = link_to match do
          %table.table.table-striped.table-hover
            %tr
              %td
                = match.long_date
  %br/
  .row.text-center
    .played
      %h1 Matches played per day
      =bar_chart @matches_created, colors: ["#d9534f"]
