<div class="container">
  <div class="row">
  <div class="col-md-4 col-md-offset-1">
      <h1> Our top players </h1><br>
      <% @top_players.each do |player| %>
      <div class="row">
        <div class="col-md-4">
          <%= image_tag player.avatar.url(:thumb), class: "img-circle" %>
        </div>
        <div class="col-md-6"><br>
         <%= link_to player.full_name %>
       </div>
     </div>
     <% end %>
   </div>
   <div class="col-md-5">
    <h1>Recent games</h1><br>
    <table class="table table-striped">
      <% @recent_games.each do |match| %>
      <tr>
        <td>
          <%= match.date.to_formatted_s(:long) %>
        </td>
        <td>
          <%= link_to 'Preview >>> ', match %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
